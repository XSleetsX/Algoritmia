import java.util.ArrayList;
import java.util.Iterator;

public class Cajoneria<T extends Caja<T>> implements Iterable<T>{
	private ArrayList <T> cajas = new ArrayList <T> ();
	private int tope;
	
	public Cajoneria(int tope) {
		super();
		this.tope = tope;
	}
	public void add(T objeto) {
		if (cajas.size() < tope) {
			cajas.add(objeto);
		} else {
			throw new RuntimeException("No hay espacio.");
		}
	}
	public Iterator<T> iterator() {
		return cajas.iterator();
	}
	public boolean search(T elemento) {
		for( T caja : cajas) {
			if(caja.contiene(elemento)) {
				
			}
		}
		return false;
	}
	
	public String toString() {
		String cajoneria = "   Posici√≥n      Color Caja      Objetos   \n";
		for (int i = 0; i < cajas.size(); i++) {
			cajoneria += "   " + (i + 1) + "   " + cajas.get(i).toString();
		}
		return cajoneria;
	}
}
